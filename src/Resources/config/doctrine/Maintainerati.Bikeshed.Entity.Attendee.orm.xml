<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Maintainerati\Bikeshed\Entity\Attendee"
            repository-class="Maintainerati\Bikeshed\Repository\AttendeeRepository"
            table="attendee">

        <id name="id" type="uuid" column="id"><generator strategy="CUSTOM"/></id>

        <field name="email" column="email" length="180" precision="0" scale="0" unique="true"/>
        <field name="handle" column="handle" length="255" precision="0" scale="0" unique="true"/>
        <field name="firstName" column="first_name" length="255" precision="0" scale="0" nullable="true"/>
        <field name="lastName" column="last_name" length="255" precision="0" scale="0" nullable="true"/>
        <field name="roles" type="json" column="roles" precision="0" scale="0"/>
        <field name="password" column="password" precision="0" scale="0" nullable="true"/>
        <field name="passwordExpires" type="datetimetz" column="password_expires" precision="0" scale="0" nullable="true"/>

        <one-to-many field="notes"
                     target-entity="Maintainerati\Bikeshed\Entity\Note"
                     mapped-by="attendee"
                     orphan-removal="true">
            <cascade>
                <cascade-remove/>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-many field="spaces"
                      target-entity="Maintainerati\Bikeshed\Entity\Space"
                      inversed-by="attendees">
            <join-table name="attendee_space">
                <join-columns>
                    <join-column name="attendee_id"
                                 referenced-column-name="id"
                                 on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="space_id"
                                 referenced-column-name="id"
                                 on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
