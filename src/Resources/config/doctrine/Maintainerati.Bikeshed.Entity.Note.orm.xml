<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Maintainerati\Bikeshed\Entity\Note"
            repository-class="Maintainerati\Bikeshed\Repository\NoteRepository"
            table="note">

        <id name="id" type="uuid" column="id"><generator strategy="CUSTOM"/></id>

        <field name="date" type="datetimetz_immutable" column="date" precision="0" scale="0"/>
        <field name="note" type="text" column="note" precision="0" scale="0"/>

        <many-to-one field="attendee"
                     target-entity="Maintainerati\Bikeshed\Entity\Attendee"
                     inversed-by="notes">
            <join-columns>
                <join-column name="attendee_id"
                             referenced-column-name="id"
                             on-delete="CASCADE" nullable="false"/>
            </join-columns>
        </many-to-one>

        <many-to-one field="space"
                     target-entity="Maintainerati\Bikeshed\Entity\Space"
                     inversed-by="notes">
            <join-columns>
                <join-column name="space_id"
                             referenced-column-name="id"
                             on-delete="CASCADE"
                             nullable="false"/>
            </join-columns>
        </many-to-one>

        <entity-listeners>
            <entity-listener class="Maintainerati\Bikeshed\EventListener\NoteUpdateListener">
                <lifecycle-callback type="postUpdate" method="postUpdate"/>
            </entity-listener>
        </entity-listeners>

    </entity>
</doctrine-mapping>
