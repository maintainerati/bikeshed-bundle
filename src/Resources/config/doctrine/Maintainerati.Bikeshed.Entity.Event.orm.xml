<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Maintainerati\Bikeshed\Entity\Event"
            repository-class="Maintainerati\Bikeshed\Repository\EventRepository"
            table="event">

        <unique-constraints>
            <unique-constraint name="u_event_idx" columns="date,country,city,location"/>
        </unique-constraints>

        <id name="id" type="uuid" column="id"><generator strategy="CUSTOM"/></id>

        <field name="date" type="date" column="date" precision="0" scale="0"/>
        <field name="country" column="country" length="255" precision="0" scale="0"/>
        <field name="city" column="city" length="255" precision="0" scale="0"/>
        <field name="location" column="location" length="255" precision="0" scale="0"/>

        <one-to-many field="sessions"
                     target-entity="Maintainerati\Bikeshed\Entity\Session"
                     mapped-by="event"
                     orphan-removal="true">
            <cascade>
                <cascade-remove/>
                <cascade-persist/>
            </cascade>
            <order-by>
                <order-by-field name="startTime"/>
            </order-by>
        </one-to-many>

    </entity>
</doctrine-mapping>
